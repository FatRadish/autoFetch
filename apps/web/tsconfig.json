{
  "extends": "@auto-fetch/typescript-config/react-library.json",
  "compilerOptions": {
    "outDir": "./dist",
    "types": ["vite/client","node"],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "**/*.d.ts",
    "playwright.config.ts",
    "tests/**/*.ts"
  ],
  "exclude": [
    "dist",
    "playwright-report",
    "test-results"
  ]
}
