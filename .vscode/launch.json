{
  // 使用 IntelliSense 了解相关属性。
  // 悬停以查看现有属性的描述。
  // 欲了解更多信息，请访问: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Current TS File",
      "skipFiles": ["<node_internals>/**"],
      "program": "${file}",
      "cwd": "${workspaceFolder}/apps/backend",
      "runtimeExecutable": "${workspaceFolder}/apps/backend/node_modules/.bin/tsx",
      "runtimeArgs": [],
      "console": "integratedTerminal",
      "env": {
        "NODE_ENV": "development"
      }
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to Process",
      "port": 9229,
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "调试Express",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/apps/backend/src/app.ts",
      "cwd": "${workspaceFolder}/apps/backend",
      "runtimeExecutable": "${workspaceFolder}/apps/backend/node_modules/.bin/tsx",
      "runtimeArgs": [],
      "console": "integratedTerminal",
      "env": {
        "NODE_ENV": "development",
        "TS_NODE_PROJECT": "${workspaceFolder}/apps/backend/tsconfig.json",
        "TS_NODE_TRANSPILE_ONLY": "true"
      },
      "resolveSourceMapLocations": [
        "${workspaceFolder}/apps/backend/**",
        "!**/node_modules/**",
        "!**/dist/**"
      ]
    }
  ]
}
